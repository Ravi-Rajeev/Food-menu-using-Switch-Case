#include <stdio.h>

int main()
{
    int choice;
    
    printf("Hey,Byte!\n It seems you are confused about what to eat.\n");
    printf("So,here's a short_cut.\n Enter any number between 1-5 .\n");
    scanf("%d",&choice);
    switch(choice)
    {
        case 1:
        printf("Food item-Burger\n Prize-Rs 129");
        break;
        
        case 2:
        printf("Food item-French Fries\n Prize-Rs 99");
        break;
        
        case 3:
        printf("Food item-Pasta\n Prize-Rs 179");
        break;
        
        case 4:
        printf("Food item-Pizza\n Prize-Rs 239");
        break;
        
        case 5:
        printf("Food item-Sandwich\n Prize-Rs 149");
        break;
        
        default :
        printf("INVALID CHOICE");
    }
    
    return 0;
}
